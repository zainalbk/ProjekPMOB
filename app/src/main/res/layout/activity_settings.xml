<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"> <ImageView
    android:id="@+id/btnBack"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/ic_arrow_back"
    app:tint="@color/teal_900"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/teal_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <ImageView
        android:id="@+id/ivProfileAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bg_avatar_circle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivProfileAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@email.com"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserEmail"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/btnEditProfile"
                style="@style/ProfileButtonStyle"
                android:text="Edit profile"
                app:drawableStartCompat="@drawable/ic_edit" />

            <TextView
                android:id="@+id/btnChangePassword"
                style="@style/ProfileButtonStyle"
                android:text="Ganti password"
                app:drawableStartCompat="@drawable/ic_lock" />

            <TextView
                android:id="@+id/btnSettings"
                style="@style/ProfileButtonStyle"
                android:text="Pengaturan"
                app:drawableStartCompat="@drawable/ic_settings_outline" />

            <TextView
                android:id="@+id/btnAboutUs"
                style="@style/ProfileButtonStyle"
                android:text="Tentang Kami"
                app:drawableStartCompat="@drawable/ic_info_outline" />

            <TextView
                android:id="@+id/btnSupport"
                style="@style/ProfileButtonStyle"
                android:text="Dukungan &amp; bantuan"
                app:drawableStartCompat="@drawable/ic_help_outline" />

            <TextView
                android:id="@+id/btnLogout"
                style="@style/ProfileButtonStyle"
                android:text="Log Out"
                android:textColor="#009688"
                app:drawableStartCompat="@drawable/ic_logout_teal"
                app:drawableTint="#009688"/>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_bottom_nav_wave"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivMachine"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_machine_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/teal_900" />



        <FrameLayout

            android:id="@+id/homeContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent">



            <ImageView
                android:id="@+id/ic_home"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home"
                app:tint="@color/teal_900" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/settingsContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_avatar_circle"
            android:backgroundTint="@color/teal_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/homeContainer">



            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="14dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/teal_900" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>