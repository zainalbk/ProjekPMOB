<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_bottom"
    android:padding="16dp"
    tools:context=".AiOptimizationActivity">

    <!-- Toolbar / Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_kembali"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="@color/teal_900" />

        <ImageView
            android:id="@+id/imgHeaderIcon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnBack"
            android:background="@drawable/badge_green_12"
            android:padding="12dp"
            android:src="@drawable/ic_energy"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/imgHeaderIcon"
            android:text="AI Optimization"
            android:textColor="@color/teal_900"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Card Peringatan Pakan -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/teal_300"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peringatan pakan"
                android:textColor="@color/teal_900"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sisa pakan hanya 25%. Disarankan mengisi ulang dalam 2-3 hari ke depan."
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Optimalisasi pH -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/teal_300"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Optimalisasi pH"
                android:textColor="@color/teal_900"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH rata rata minggu ini 7,2, kondisi optimal. Pertahankan kualitas air dengan pembersih rutin."
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card Kesehatan Ikan -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/teal_300"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kesehatan Ikan"
                android:textColor="@color/teal_900"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak terdeteksi ikan mati. Aktivitas ikan terlihat normal berdasarkan analisis computer vision."
                android:textColor="@color/teal_700"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
