<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_bottom"
    android:padding="16dp"
    tools:context=".ui.iot.PhMonitoringActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_kembali"
            android:src="@drawable/ic_arrow_back_24"
            app:tint="@color/teal_900" />

        <ImageView
            android:id="@+id/imgHeaderIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnBack"
            android:background="@drawable/badge_orange_12"
            android:padding="10dp"
            android:src="@drawable/ic_graph"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/imgHeaderIcon"
            android:text="Ph Monitoring"
            android:textColor="@color/teal_900"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Main Content Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/teal_300"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="24dp">

            <TextView
                android:id="@+id/txtPhValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="7.2"
                android:textColor="@color/teal_700"
                android:textSize="60sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/teal_100" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Kondisi Optimal"
                    android:textColor="@color/teal_900"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    tools:text="ph range: 6.5 - 7.5"
                    android:textColor="@color/teal_700"
                    android:textSize="12sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStatus"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="92dp"
                    android:layout_height="32dp"
                    tools:text="Normal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/teal_700"
                    app:chipCornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Last Update Info -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Update Terakhir"
            android:textColor="@color/teal_900"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLastUpdateStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="diperbarui pada 10:30"
            android:textColor="@color/teal_700"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtLastUpdateStatus"
            android:layout_marginTop="12dp"
            android:background="@color/teal_900" />
    </RelativeLayout>

</LinearLayout>
